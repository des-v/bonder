{
  "name": "bonder",
  "version": "0.0.0",
  "private": true,
  "description": "Discover local sport partners.",
  "scripts": {
    "start": "node ./bin/www",
    "test": "jest --testEnvironment=node --verbose --forceExit --maxWorkers=1",
    "test-watch": "jest --testEnvironment=node --verbose --forceExit --watchAll --maxWorkers=1",
    "test-coverage": " jest --collect-coverage --testEnvironment=node --forceExit --maxWorkers=1",
    "lint": "lint-staged",
    "prepare": "cd .. && husky install backend/.husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "./**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/des-v/bonder.git"
  },
  "keywords": [
    "software-engineering",
    "node.js",
    "backend"
  ],
  "author": "Desiree Valdes <desireevaldes@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/des-v/bonder/issues"
  },
  "homepage": "https://github.com/des-v/bonder#readme",
  "devDependencies": {
    "connect-livereload": "^0.6.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4",
    "husky": "^7.0.2",
    "jest": "^27.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-session": "^1.17.2",
    "http-errors": "~1.6.3",
    "livereload": "^0.9.3",
    "mongoose": "^6.0.5",
    "mongoose-autopopulate": "^0.15.0",
    "morgan": "~1.9.1",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.1.0",
    "pug": "^3.0.2",
    "socket.io": "^4.3.1"
  }
}
